rofi:

git clone https://github.com/davatorium/rofi.git
git checkout 1.7.3
apt update
apt upgrade -y
meson setup build
ninja -C build
ninja -C build install

polybar:

git clone --recursive https://github.com/polybar/polybar.git
git checkout 3.6.3
mkdir build
cd build
cmake ..
make -j$(nproc)
sudo make install

konsole:

git clone https://invent.kde.org/utilities/konsole.git
git checkout release/22.08
mkdir konsole/build
cd konsole/build
cmake ..
make
make install

